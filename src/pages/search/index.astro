---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection, render } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const queryParam = Astro.url.searchParams.get('q') ?? '';
const query = queryParam.trim();
const posts = await getCollection('blog');
const postsWithBody = await Promise.all(
  posts.map(async (p) => {
    try {
      const { Content } = await render(p);
      const html = await Content();
      const text = String(html).replace(/<[^>]+>/g, ' ').replace(/\s+/g, ' ').trim();
      return { ...p, __bodyText: text } as typeof p & { __bodyText: string };
    } catch {
      return { ...p, __bodyText: '' } as typeof p & { __bodyText: string };
    }
  })
);
const lowerQuery = query.toLowerCase();
const sorted = postsWithBody.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
function buildSnippet(text: string, needle: string, radius = 120) {
  const i = text.toLowerCase().indexOf(needle.toLowerCase());
  if (i === -1) return '';
  const start = Math.max(0, i - radius);
  const end = Math.min(text.length, i + needle.length + radius);
  let snippet = text.slice(start, end).trim();
  if (start > 0) snippet = `… ${snippet}`;
  if (end < text.length) snippet = `${snippet} …`;
  return snippet;
}

function highlight(html: string, needle: string) {
  if (!needle) return html;
  const escaped = needle.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
  return html.replace(new RegExp(escaped, 'gi'), (m) => `<mark class="bg-[#E1F0FF] text-[#0A84FF]">${m}</mark>`);
}

const results = query
  ? sorted
      .map((post) => {
        const haystack = `${post.data.title} ${post.data.description ?? ''} ${post.__bodyText ?? ''}`;
        if (!haystack.toLowerCase().includes(lowerQuery)) return null;
        const snippet = buildSnippet(post.__bodyText ?? '', query, 140);
        return { post, snippet } as { post: typeof post; snippet: string };
      })
      .filter(Boolean) as { post: typeof sorted[number]; snippet: string }[]
  : sorted.slice(0, 6).map((post) => ({ post, snippet: post.data.description ?? '' }));
---

<PageLayout
  title="Search Insights — Haider Ali"
  description="Search essays, field notes, and resources on design leadership, AI, and enterprise experience systems."
>
  <section class="space-y-6 border-b border-gray-200 py-12">
    <h1 class="text-4xl font-bold text-gray-900">Search</h1>
    <p class="text-base text-gray-600 max-w-2xl">
      Find writing, frameworks, and experiments from haiderali.co. Search by topic, challenge, or keyword.
    </p>
    <form method="get" action="/search/" class="flex flex-col gap-4 sm:flex-row">
      <label class="sr-only" for="search-input">Search the site</label>
      <input
        type="search"
        id="search-input"
        name="q"
        value={query}
        placeholder="Try ‘design systems’, ‘AI rituals’, or ‘leadership’"
        class="w-full flex-1 rounded-2xl border border-gray-300 px-4 py-3 text-base text-gray-900 focus:border-[#0A84FF] focus:outline-none"
      />
      <button
        type="submit"
        class="inline-flex items-center justify-center rounded-full bg-[#0A84FF] px-6 py-3 text-sm font-semibold text-white transition hover:bg-[#086cd1]"
      >
        Search
      </button>
    </form>
  </section>

  <section class="space-y-6 py-12">
    {results.length === 0 ? (
      <p class="text-base text-gray-600">No results for “{query}”. Try another term.</p>
    ) : (
      <>
        <p class="text-sm text-gray-500">
          {query === ''
            ? 'Latest posts'
            : `${results.length} result${results.length === 1 ? '' : 's'} for “${query}”.`}
        </p>
        <ul class="space-y-8">
          {results.map(({ post, snippet }) => (
            <li class="border-b border-gray-200 pb-6 last:border-0" key={post.id}>
              <a href={`/blog/${post.slug ?? post.id}/`} class="group block">
                <p class="text-xs font-semibold uppercase tracking-widest text-gray-400">
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <h2 class="mt-2 text-2xl font-semibold text-gray-900 group-hover:text-[#0A84FF]">
                  {post.data.title}
                </h2>
                {query === '' ? (
                  snippet && <p class="mt-3 text-base text-gray-600">{snippet}</p>
                ) : (
                  <p class="mt-3 text-base text-gray-600" set:html={highlight(snippet || post.data.description || '', query)}></p>
                )}
              </a>
            </li>
          ))}
        </ul>
      </>
    )}
  </section>
</PageLayout>
