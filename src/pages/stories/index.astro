---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).slice(0, 12);
---

<PageLayout
  title="Field Notes â€” Research & Experiments"
  description="Snapshots from Haider Ali's enterprise design work, systems experiments, and lessons from the field."
>
  <section class="space-y-12 py-16">
    <header class="space-y-4">
      <h1 class="text-4xl font-bold text-gray-900">Field Notes</h1>
      <p class="text-base text-gray-600 max-w-3xl">
        Quick dispatches from enterprise design systems, AI pilots, and leadership experiments. These notes capture the
        context, decisions, and results that often sit between formal case studies and published essays.
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-2">
      {posts.map((post) => (
        <article class="rounded-3xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-lg" key={post.id}>
          <p class="text-xs font-semibold uppercase tracking-widest text-gray-400">
            <FormattedDate date={post.data.pubDate} />
          </p>
          <h2 class="mt-3 text-xl font-semibold text-gray-900">
            <a href={`/blog/${post.slug ?? post.id}/`} class="hover:text-[#0A84FF]">
              {post.data.title}
            </a>
          </h2>
          {post.data.description && (
            <p class="mt-3 text-sm leading-relaxed text-gray-600">{post.data.description}</p>
          )}
          <a href={`/blog/${post.slug ?? post.id}/`} class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#0A84FF]">
            Read note
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M5 12h14" />
              <path d="m12 5 7 7-7 7" />
            </svg>
          </a>
        </article>
      ))}
    </div>
  </section>
</PageLayout>
