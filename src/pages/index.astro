---
import PageLayout from '../layouts/PageLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<PageLayout
	title={"Haider Ali — Design Leader, Author, and Digital Experience Architect"}
	description={"Official site of Haider Ali — exploring design, AI, and the future of digital experience systems."}
>
	<section id="hero" class="border-b border-gray-200 bg-white py-20">
		<div class="grid items-center gap-12 md:grid-cols-[minmax(0,2fr)_minmax(0,1.2fr)]">
			<div class="space-y-6">
				<h1 class="text-5xl font-bold text-gray-900 sm:text-6xl">Haider Ali</h1>
				<p class="text-2xl font-medium text-gray-700">Design leader, author, and digital experience architect.</p>
				<p class="max-w-2xl text-lg leading-relaxed text-gray-600">
					I shape user experience, AI, and enterprise design systems at Aramco and with teams across the globe. My work blends strategy, systems thinking, and experimentation to help organizations build products that stay relevant.
				</p>
				<div class="flex flex-wrap gap-4 pt-4">
					<a href="/blog" class="inline-flex items-center rounded-full bg-[#0A84FF] px-6 py-3 text-sm font-semibold text-white transition hover:bg-[#086cd1] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#0A84FF]">Read My Writing</a>
					<a href="/about" class="inline-flex items-center rounded-full border border-gray-300 px-6 py-3 text-sm font-semibold text-gray-900 transition hover:border-gray-400 hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#0A84FF]">About Me</a>
					<a href="/speaking" class="inline-flex items-center rounded-full border border-gray-300 px-6 py-3 text-sm font-semibold text-gray-900 transition hover:border-gray-400 hover:bg-gray-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#0A84FF]">Book a Workshop</a>
				</div>
			</div>
			<div class="rounded-3xl border border-gray-200 bg-gray-50 p-8 text-sm text-gray-600 shadow-sm">
				<h2 class="text-base font-semibold uppercase tracking-widest text-[#0A84FF]">Focus Areas</h2>
				<ul class="mt-4 space-y-3">
					<li class="flex items-start gap-3">
						<span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-[#0A84FF]"></span>
						<span>Enterprise design systems and governance for complex organizations.</span>
					</li>
					<li class="flex items-start gap-3">
						<span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-[#0A84FF]"></span>
						<span>Human-centered AI experiences blending intelligence, trust, and clarity.</span>
					</li>
					<li class="flex items-start gap-3">
						<span class="mt-1 h-2 w-2 flex-shrink-0 rounded-full bg-[#0A84FF]"></span>
						<span>Design leadership and coaching that keeps teams learning in motion.</span>
					</li>
				</ul>
			</div>
		</div>
	</section>

	<section id="featured" class="border-b border-gray-200 bg-white py-16">
		<div class="space-y-12">
			<div class="flex items-center justify-between gap-4">
				<h2 class="text-3xl font-semibold text-gray-900">Featured Work</h2>
				<a href="/work" class="text-sm font-medium text-[#0A84FF] hover:underline">View all work</a>
			</div>
			<div class="grid gap-6 md:grid-cols-3">
				<a href="/blog" class="group flex flex-col justify-between rounded-2xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-[#0A84FF] hover:shadow-lg">
					<h3 class="text-xl font-semibold text-gray-900 group-hover:text-[#0A84FF]">User First Insights</h3>
					<p class="mt-3 flex-1 text-sm leading-relaxed text-gray-600">Essays on design, AI, and digital strategy drawn from enterprise programs and field learnings.</p>
					<span class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#0A84FF]">Explore writing
						<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
							<path d="M5 12h14" />
							<path d="m12 5 7 7-7 7" />
						</svg>
					</span>
				</a>
				<a href="/book" class="group flex flex-col justify-between rounded-2xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-[#0A84FF] hover:shadow-lg">
					<h3 class="text-xl font-semibold text-gray-900 group-hover:text-[#0A84FF]">Stay Unfinished</h3>
					<p class="mt-3 flex-1 text-sm leading-relaxed text-gray-600">My book on building in a world that never stops changing — launch fast, learn, and iterate with courage.</p>
					<span class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#0A84FF]">Visit book hub
						<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
							<path d="M5 12h14" />
							<path d="m12 5 7 7-7 7" />
						</svg>
					</span>
				</a>
				<a href="/work" class="group flex flex-col justify-between rounded-2xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-[#0A84FF] hover:shadow-lg">
					<h3 class="text-xl font-semibold text-gray-900 group-hover:text-[#0A84FF]">Enterprise Design Systems</h3>
					<p class="mt-3 flex-1 text-sm leading-relaxed text-gray-600">Leading scalable UX governance, design operations, and multi-product systems for high-impact teams.</p>
					<span class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#0A84FF]">See capabilities
						<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
							<path d="M5 12h14" />
							<path d="m12 5 7 7-7 7" />
						</svg>
					</span>
				</a>
			</div>
		</div>
	</section>

	<section id="latest-writing" class="border-b border-gray-200 bg-white py-16">
		<div class="space-y-12">
			<div class="flex items-center justify-between gap-4">
				<h2 class="text-3xl font-semibold text-gray-900">Latest Writing</h2>
				<a href="/blog" class="text-sm font-medium text-[#0A84FF] hover:underline">Browse all</a>
			</div>
			{posts.length > 0 ? (
				<ul class="m-0 grid list-none grid-cols-1 gap-8 p-0 md:grid-cols-3">
					{posts.map((post) => (
						<li class="flex flex-col rounded-2xl border border-gray-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:border-[#0A84FF] hover:shadow-lg" key={post.id}>
							<p class="text-xs font-semibold uppercase tracking-widest text-gray-400">
								<FormattedDate date={post.data.pubDate} />
							</p>
							<h3 class="mt-3 text-xl font-semibold text-gray-900">
								<a href={`/blog/${post.slug ?? post.id}/`} class="hover:text-[#0A84FF]">
									{post.data.title}
								</a>
							</h3>
							<p class="mt-3 flex-1 text-sm leading-relaxed text-gray-600">{post.data.description ?? 'Read the full story →'}</p>
							<a class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-[#0A84FF]" href={`/blog/${post.slug ?? post.id}/`}>
								Read article
								<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
									<path d="M5 12h14" />
									<path d="m12 5 7 7-7 7" />
								</svg>
							</a>
						</li>
					))}
				</ul>
			) : (
				<p class="text-sm text-gray-500">New essays are coming soon. In the meantime, explore the archive.</p>
			)}
		</div>
	</section>

	<section id="cta" class="bg-gray-50 py-20">
		<div class="mx-auto max-w-3xl text-center">
			<p class="text-xl font-semibold text-gray-800">“I help teams build products that evolve — not decay.”</p>
			<a href="/contact" class="mt-8 inline-flex items-center rounded-full bg-[#0A84FF] px-6 py-3 text-sm font-semibold text-white transition hover:bg-[#086cd1] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#0A84FF]">Let’s Connect</a>
		</div>
	</section>

	<footer class="border-t border-gray-200 bg-white py-10 text-sm text-gray-500">
		<div class="flex flex-col items-center justify-between gap-4 text-center sm:flex-row">
			<p>&copy; {new Date().getFullYear()} Haider Ali. All rights reserved.</p>
			<nav class="flex flex-wrap items-center gap-4">
				<a href="https://www.linkedin.com/in/haideralidesign" class="hover:text-[#0A84FF]" target="_blank" rel="noopener noreferrer">LinkedIn</a>
				<a href="https://userfirstinsights.substack.com" class="hover:text-[#0A84FF]" target="_blank" rel="noopener noreferrer">Substack</a>
				<a href="https://github.com/haiderali" class="hover:text-[#0A84FF]" target="_blank" rel="noopener noreferrer">GitHub</a>
				<a href="https://x.com/haiderali" class="hover:text-[#0A84FF]" target="_blank" rel="noopener noreferrer">X</a>
			</nav>
		</div>
	</footer>
</PageLayout>
